apiVersion: apps/v1
kind: Deployment
metadata:
  name: hugo-helper
  labels:
    app: hugo-helper
spec:
  replicas: 1
  selector:
    matchLabels:
      app: hugo-helper
  template:
    metadata:
      labels:
        app: hugo-helper
    spec:
      volumes:
      - name: data
        persistentVolumeClaim:
         claimName: nfs
      containers:
      - name: hugo-helper
        image: ${GCR_TAG}:${WERCKER_GIT_COMMIT}
        imagePullPolicy: IfNotPresent
        volumeMounts:
          - mountPath: "/data"
            name: data
